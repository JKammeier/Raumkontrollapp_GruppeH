<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AusstattungHinzuFragment">

    <TextView
        android:id="@+id/RaumnummerHinzu"
        android:layout_width="144dp"
        android:layout_height="23dp"
        android:text="RaumNummer:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="23dp" />

    <TextView
        android:id="@+id/NeueAusstattung"
        android:layout_width="128dp"
        android:layout_height="22dp"
        android:text="Neue Ausstattung:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="63dp" />

    <TextView
        android:id="@+id/FragetextWasHinzu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Was möchten Sie hinzufügen?"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="100dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="353dp"
        android:layout_height="207dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="139dp" />

    <EditText
        android:id="@+id/sonstiges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sonstiges "
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="544dp" />

    <Button
        android:id="@+id/buttonfürsSonstiges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="254dp"
        android:text="Ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sonstiges"
        app:layout_constraintTop_toBottomOf="@+id/sonstiges"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:src="@android:drawable/checkbox_on_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.99"
        app:layout_constraintStart_toEndOf="@+id/Raumnummer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/EingabeAnzahlHinzu"
        android:layout_width="160dp"
        android:layout_height="21dp"
        android:text="Anzahl: "
        tools:layout_editor_absoluteX="19dp"
        tools:layout_editor_absoluteY="384dp" />

</androidx.constraintlayout.widget.ConstraintLayout>