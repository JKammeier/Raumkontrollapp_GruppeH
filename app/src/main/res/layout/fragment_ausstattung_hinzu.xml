<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AusstattungHinzuFragment">

    <TextView
        android:id="@+id/Raumnummer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="24dp"
        android:text="RaumNummer:"
        app:layout_constraintBottom_toTopOf="@+id/NeueAusstattung"
        app:layout_constraintEnd_toStartOf="@+id/checkBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/NeueAusstattung"
        android:layout_width="137dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:text="Neue Ausstattung:"
        app:layout_constraintBottom_toTopOf="@+id/FragetextView3"
        app:layout_constraintStart_toStartOf="@+id/FragetextView3"
        app:layout_constraintTop_toBottomOf="@+id/Raumnummer" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="101dp"
        android:text="CheckBox"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Raumnummer"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FragetextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="242dp"
        android:text="Was möchten Sie hinzufügen?"
        app:layout_constraintBottom_toTopOf="@+id/sonstiges"
        app:layout_constraintStart_toStartOf="@+id/recyclerView"
        app:layout_constraintTop_toBottomOf="@+id/NeueAusstattung" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="275dp"
        android:layout_height="0dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="376dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox" />

    <EditText
        android:id="@+id/sonstiges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Sonstiges "
        app:layout_constraintBottom_toTopOf="@+id/buttonfürsSonstiges"
        app:layout_constraintStart_toStartOf="@+id/recyclerView"
        app:layout_constraintTop_toBottomOf="@+id/FragetextView3" />

    <Button
        android:id="@+id/buttonfürsSonstiges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="254dp"
        android:text="Ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sonstiges"
        app:layout_constraintTop_toBottomOf="@+id/sonstiges" />

</androidx.constraintlayout.widget.ConstraintLayout>